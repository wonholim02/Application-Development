<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                app:srcCompat="@drawable/image1" />

            <TextView
                android:id="@+id/textLim"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:gravity="center"
                android:text="About the Seattle VGOC\n Seattle Video Game Orchestra \8 Choir
                \n\n VGOC is a  Seattle based chamber ensemble dedicated to performing video game music. The VGOC consists of an orchestral ensemble, choir, and chamber groups.
                \n\n We are a non-auditioning, teaching orchestra and choir, accepting members of all levels and backgrounds.
                \n\n We accept vocalists and instrumentalists of all kind including piano, saxophone, guitar, etc.
                \n\n Love making music in your spare time? Enjoy video game music?  Come join us!
                \n\n"
                android:textColor="#FF9800"
                android:textStyle="bold" />

            <Button
                android:id="@+id/webstie"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F8F8"
                android:text="Official Website"
                android:textColor="#000000" />

            <Button
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A00AC5"
                android:text="More Info"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:text="Facebook"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:text="Twitter"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="Contact Us" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>